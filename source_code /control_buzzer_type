import RPi.GPIO as GPIO
import time

# 부저 핀(왼쪽, 오른쪽)
LEFT_BUZZER_PIN = 30
RIGHT_BUZZER_PIN = 8

# GPIO 설정
GPIO.setmode(GPIO.BCM)
GPIO.setup(LEFT_BUZZER_PIN, GPIO.OUT)
GPIO.setup(RIGHT_BUZZER_PIN, GPIO.OUT)

# 부저 울리기
def play_buzzer(buzzer_pin, distance):
    frequency = 0
    delay_time = 0

    if 25 < distance <= 40:
        frequency = 700
        delay_time = 0.3
    elif 10 < distance <= 25:
        frequency = 1000
        delay_time = 0.15
    elif distance <= 10:
        frequency = 3000
        delay_time = 0.05

    if frequency != 0:
        GPIO.output(buzzer_pin, GPIO.HIGH)
        time.sleep(delay_time)
        GPIO.output(buzzer_pin, GPIO.LOW)
        time.sleep(delay_time)

try:
    while True:
        # 각 초음파 센서로 거리 측정
        # (여기에 해당하는 부분을 센서와의 상호 작용을 통해 작성해야 함)

        # 거리에 따라 부저 작동 여부 판단
        # (여기에 해당하는 부분을 거리에 따라 부저를 작동하도록 작성해야 함)

        # 측정 주기 간격
        time.sleep(1)

except KeyboardInterrupt:
    # 프로그램 종료 시 GPIO 정리
    GPIO.cleanup()
